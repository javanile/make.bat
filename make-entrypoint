#!/bin/sh
set -e

if [[ $1 != "make" ]]; then
    set -- make "$@"
fi

case $2 in
    -v|--version)
        echo "--> javanile/make.bat <--"
        ;;
    --docker-info)
        set -- docker info
        ;;
    --docker-version)
        set -- docker version
        ;;
    --docker-workdir-ls)
        set -- ls -lah ${PWD}
        ;;
    --docker-compose-version)
        set -- docker-compose version
        ;;
esac

exec "$@"
